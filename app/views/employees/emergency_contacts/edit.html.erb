<div class="modal-dialog">
  <div class="modal-content">
		<div class="modal-header">
		  <h4 class="modal-title card-title" id="mainModalLabel">
		    Emergency Contact Details
		  </h4>
		  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		</div>
		<hr class="no-margin">
		<%= simple_form_for @emergency_contact, html: { autocomplete: "off", data: { modal: true } }, remote: request.xhr?, url: :employee_emergency_contact, method: 'put' do |f| %>
		  <div class="modal-body">
		    <%= f.error_notification %>
		    <%= f.input :employee_id, input_html: {value: @employee.id}, as: :hidden %>
		    <div class="row">
		    	<div class="col-md-4 col-sm-4">
				    <%= f.input :first_name %>
				  </div>
				  <div class="col-md-4 col-sm-4">
				    <%= f.input :middle_name %>
				  </div>
				  <div class="col-md-4 col-sm-4">
				    <%= f.input :last_name %>
				  </div>
				</div>
		    <%= f.input :relationship, label: "Relationship" %>
		    <%= f.input :mobile_number, label: "Phone Number" %>
		  </div>
		  <hr class="no-margin">
		    <div class="modal-body">
			    <h6 class="text-muted">Address Details</h6>
			    <div class="row">
			    	<div class="col-md-6 col-sm-6">
					    <%= f.input :sitio %>
					  </div>
					  <div class="col-md-6 col-sm-6">
					    <%= f.input :barangay %>
					  </div>
					  <div class="col-md-6 col-sm-6">
					    <%= f.input :municipality %>
					  </div>
					  <div class="col-md-6 col-sm-6">
					    <%= f.input :province %>
					  </div>
					</div>
			  </div>
		  <div class="modal-footer">
		    <%= f.submit "Save", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
		  </div>
		<% end %>
	</div>
</div>