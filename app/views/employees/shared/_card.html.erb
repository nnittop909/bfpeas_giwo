<div class="card">
	<div class="card-body min-padding">
		<div class="row">
			<div class="col-md-1 col-sm-2">
				<% if employee.avatar.attached? %>
					<%= image_tag(employee.avatar, height: 60, width: 60, class: "img-circle float-right") %>
				<% else %>
					<%= image_tag('default', height: 60, width: 60, class: "img-circle float-right") %>
				<% end %>
			</div>
			<div class="col-md-4 col-sm-10">
				<h5 class="mb-0 text-primary"><%= employee.fullname_and_title %></h5>
				<small class="badge bg-info"><%= employee.designation %></small><br>
				<small class="text-muted"><%= employee.department.name if employee.department.present? %></small>
			</div>
			<div class="col-md-3">
				
			</div>
			<div class="col-md-4">
				<div class="align-content-end mt-10">
					<% if employee.time_records.present? %>
			      <span class="text-muted float-right">
			        <i class="fa fa-clock"></i> &nbsp<%= employee.log_status(Time.now).titleize %> <%= time_ago_in_words(employee.recent_logged_at(Time.now)) %> ago
			      </span>
  				<% end %>
    		</div>
			</div>
		</div>
	</div>
</div>