<div class="modal-dialog">
  <div class="modal-content">
		<div class="modal-header">
		  <h4 class="modal-title card-title" id="mainModalLabel">
		    Set Department
		  </h4>
		  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		</div>
		<hr class="no-margin">
		<%= simple_form_for @employee, html: { autocomplete: "off", data: { modal: true } }, remote: request.xhr?, url: employee_department_path(employee_id: @employee.id) do |f| %>
		  <div class="modal-body">
		    <%= f.error_notification %>
		    <%= f.input :department_id, collection: Department.all.map{|d| [d.name, d.id]} %>
		  </div>
		  <div class="modal-footer">
		    <%= f.submit "Save", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
		  </div>
		<% end %>
	</div>
</div>