<div class="modal-dialog">
  <div class="modal-content">
		<div class="modal-header">
		  <h4 class="modal-title card-title" id="mainModalLabel">
		    Log Details | <%= @date.strftime("%B %e, %Y") %>
		  </h4>
		  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		</div>
		<hr class="no-margin">
	  <div class="modal-body">
	  	<% if @am_worked_times.present? %>
		  	<table class="table">
		  		<tr>
		  			<th class="td-min-padding">AM</th>
		  			<th class="td-min-padding">Total</th>
		  		</tr>
		  		<% @am_worked_times.each do |dtr| %>
			  		<tr>
			  			<td class="td-min-padding"><%= "#{dtr.in_at.strftime('%I:%M')} - #{dtr.out_at.strftime('%I:%M')}" %></td>
			  			<td class="td-min-padding"><%= DurationCalculator.new(dtr.in_at, dtr.out_at, @am_starts_at, @am_ends_at).duration %></td>
			  		</tr>
			  	<% end %>
		  	</table>
		  <% end %>
	  	<% if @pm_worked_times.present? %>
	  		<br>
		  	<table class="table">
		  		<tr>
		  			<th class="td-min-padding">PM</th>
		  			<th class="td-min-padding">Total</th>
		  		</tr>
		  		<% @pm_worked_times.each do |dtr| %>
			  		<tr>
			  			<td class="td-min-padding"><%= "#{dtr.in_at.strftime('%I:%M')} - #{dtr.out_at.strftime('%I:%M')}" %></td>
			  			<td class="td-min-padding"><%= DurationCalculator.new(dtr.in_at, dtr.out_at, @pm_starts_at, @pm_ends_at).duration %></td>
			  		</tr>
			  	<% end %>
		  	</table>
		  <% end %>
	  </div>
	</div>
</div>