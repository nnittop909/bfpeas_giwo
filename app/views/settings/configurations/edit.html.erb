<div class="modal-dialog">
  <div class="modal-content">
		<div class="modal-header">
		  <h4 class="modal-title card-title" id="mainModalLabel">
		    Monitoring Configuration
		  </h4>
		  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		</div>
		<hr class="no-margin">
		<%= simple_form_for @config, html: { autocomplete: "off", data: { modal: true } }, remote: request.xhr?, url: settings_configuration_path do |f| %>
		  <div class="modal-body">
		    <%= f.error_notification %>
		    <%= f.input :display_duration, label: "Display Duration (in Seconds)", hint: 'Set employee profile display duration in monitoring mode.' %>
		  </div>
		  <div class="modal-footer">
		    <%= f.submit "Save", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
		  </div>
		<% end %>
	</div>
</div>