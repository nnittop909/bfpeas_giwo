<h1 class="mb-0 text-success text-center">
  <%= "You've been #{employee.log_status(Time.now).titleize.downcase}!" %>
</h1>
<h4 class="text-center">
	<% if employee.logged_in?(Time.now) %>
  	<%= "Please wait for 30 seconds to log-out." %>
  <% else %>
  	<% if employee.can_pm_login?(Time.now) %>
  		<%= "Please wait for 30 seconds to log-in." %>
  	<% else %>
      <%= "Please wait for #{@employee.minutes_to_log_out(Time.now)} to log-in." %>
  	<% end %>
  <% end %>
</h4>